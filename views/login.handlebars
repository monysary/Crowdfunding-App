<div class = "login-section">

  <div class="login-form">
    <h2>Login</h2>
    <form class="form">
      <div class = "form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class = "form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="text" id="password-login" />
      </div>
      <div class = "form-group">
        <button class="btn btn-primary"
        type="submit">Login</button>
    </form>
  </div>
  <div class="signup-form">
    <h3>Signup</h3>
    <form class="form">
      <div class = "form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class = "form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class = "form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="text" id="password-signup" />
      </div>
      <div class = "form-group">
        <button class="btn btn-primary"
        type="submit">Signup</button>
    </form>
  </div>

</div>

<script src="./js/login.js"></script>